<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="120dp"
                android:height="196dp" />
            <corners android:radius="8dp" />
            <gradient
                android:endColor="@color/transparent_0000"
                android:angle="0"
                android:gradientRadius="115dp"
                android:startColor="#ff2200"
                android:type="linear" />
                
            
            <gradient
                android:endColor="@color/transparent_0000"
                android:angle="90"
                android:gradientRadius="115dp"
                android:startColor="#2f12ff"
                android:type="linear" />
        </shape>
    </item>
    <item
        android:bottom="15dp"
        android:top="5dp"
        android:left="5dp"
        android:right="15dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff"/>
            <corners android:radius="8dp" />
            
        </shape>
    </item>
