<resources>
    
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
    
    <!--■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■-->
    <!--General Style-->
    
    <style name="general_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/text_primary_333333</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="general_text_link">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_link_666666</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="general_text_heading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_heading_333333</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="general_edt">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textColor">@color/text_primary_333333</item>
        <item name="android:textColorHint">@color/text_hint_cccccc</item>
        <item name="android:textSize">13sp</item>
    </style>
    
    <style name="general_card">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">176dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/card_r8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">12dp</item>
        <item name="android:focusable">true</item>
    </style>
    
    <style name="general_card_btn">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/card_btn_r12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/btn_activated_text_ffffff</item>
        <item name="android:textSize">13sp</item>
    </style>
    
    <style name="general_cover">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/shadow_bg_60c000000</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:visibility">gone</item>
    </style>
    
    <!--■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■-->
    <!--Login Layout Style-->
    
    <style name="login_text_button">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <!--<group_item name="android:textAllCaps">false</group_item>-->
        <item name="android:textColor">@color/btn_activated_text_333333</item>
        <item name="android:textSize">13sp</item>
        <!--<group_item name="android:textStyle">normal</group_item>-->
    </style>
    
    <style name="btn_primary">
        <item name="android:layout_width">252dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/login_btn_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/btn_primary_text_ffffff</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="login_edt">
        <item name="android:layout_width">252dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/login_edt</item>
        <item name="android:gravity">start|center_vertical</item>
        <!--<group_item name="android:inputType">text</group_item>-->
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">@color/text_primary_333333</item>
        <item name="android:textColorHint">@color/text_hint_cccccc</item>
        <item name="android:textSize">13sp</item>
    </style>
    
    <!--■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■-->
    <!--Main Layout Style-->
    
    <style name="main_text_heading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:textColor">@color/text_heading_333333</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="main_btn_oval">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/main_btn_oval</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:scaleType">centerInside</item>
        <!--<group_item name="android:gravity">center</group_item>-->
        <!--<group_item name="android:textColor">@color/btn_activated_text_333333</group_item>-->
        <!--<group_item name="android:textSize">18sp</group_item>-->
    </style>
    
    <style name="main_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <!--<group_item name="layout">@layout/group_item</group_item>-->
    </style>
    
    <!--■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■-->
    <!--New Account Layout Style-->
    
    <style name="new_account_btn">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/new_account_btn_secondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/btn_text_btn_169bd5</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="edit_text_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/btn_text_btn_169bd5</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="new_account_edt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/new_account_edt_bg</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:inputType">textAutoComplete</item>
        <item name="android:paddingStart">34dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textColor">@color/text_primary_333333</item>
        <item name="android:textColorHint">@color/text_hint_cccccc</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <!--■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■-->
    <!--activity detail-->
    
    <style name="detail_text_note">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <!--<group_item name="android:clickable">false</group_item>-->
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
        <item name="android:hint">@string/detail_hint_note</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textColor">@color/text_primary_333333</item>
        <item name="android:textColorHint">@color/text_hint_cccccc</item>
        <item name="android:textSize">13sp</item>
        <!--<group_item name="android:textStyle">normal</group_item>-->
    </style>
    
    <style name="detail_text_primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">76dp</item>
        <!--<group_item name="android:background">@null</group_item>-->
        <item name="android:clickable">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">start</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_primary_333333</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="detail_text_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<group_item name="android:layout_marginBottom">10dp</group_item>-->
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textColor">@color/text_primary_333333</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="detail_tag">
        <item name="android:layout_width">76dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_marginBottom">64dp</item>
        <item name="android:background">@drawable/tag_red_r14dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:ellipsize">end</item>
        <!--<group_item name="android:gravity">center</group_item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/btn_activated_text_333333</item>
        <item name="android:textSize">13sp</item>
    </style>
    
    <style name="detail_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/btn_activated_text_333333</item>
        <item name="android:textSize">14sp</item>
        
        
    </style>
    
    <!--■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■-->
    <!--■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■-->
    <!--Main Activity >> Item-->
    
    <style name="item_text_title">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/text_primary_333333</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="item_text_username">
        <item name="android:layout_width">184dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:maxLines">2</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/text_secondary_999999</item>
        <item name="android:textSize">13sp</item>
    </style>
    
    <style name="item_btn_copy">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:background">@color/btn_accent_ffffff</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:text">Copy</item>
        <!--<group_item name="android:textAllCaps">false</group_item>-->
        <item name="android:textColor">@color/btn_text_btn_169bd5</item>
        <item name="android:textSize">13sp</item>
        <!--<group_item name="android:textStyle">normal</group_item>-->
    </style>
    
    <!--■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■-->
    <!--■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■-->
    <!--New Account Activity >> Card-->
    
    <style name="card_text">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">176dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/card_r8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">12dp</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">start|top</item>
        <!--<group_item name="android:inputType">textMultiLine</group_item>-->
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/text_secondary_999999</item>
        <!--<group_item name="android:textColorHint">@color/text_hint_cccccc</group_item>-->
        <item name="android:textSize">6sp</item>
    </style>
    
    <style name="card_edt">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">232dp</item>
        <item name="android:background">@null</item>
        <!--<group_item name="android:elevation">24dp</group_item>-->
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:gravity">start|top</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:minLines">3</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/text_primary_333333</item>
        <item name="android:textColorHint">@color/text_hint_cccccc</item>
        <item name="android:textSize">13sp</item>
    </style>
    
    <style name="card_detail">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">335dp</item>
        <!--<group_item name="android:layout_centerHorizontal">true</group_item>-->
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:background">@drawable/card_r12dp</item>
        <!--<group_item name="android:divider">@drawable/spacer_10dp</group_item>-->
        <item name="android:elevation">12dp</item>
        <!--<group_item name="android:orientation">vertical</group_item>-->
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <!--<group_item name="android:paddingTop">10dp</group_item>-->
        <!--<group_item name="android:showDividers">middle</group_item>-->
    </style>
    
    <style name="card_btn_social">
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/card_social_login_button</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/btn_activated_text_ffffff</item>
        <item name="android:textSize">13sp</item>
    </style>


</resources>
