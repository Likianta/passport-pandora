<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shadow_primary_35c000000"
    tools:ignore="HardcodedText, TextFields, ContentDescription, ButtonStyle">
    
    <Button
        android:id="@+id/test_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="input demo number and click me to test" />
    
    <EditText
        android:id="@+id/test_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/test_btn"
        android:hint="input a number below" />
    
    <LinearLayout
        android:id="@+id/test_panel_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/test_edt"
        android:orientation="horizontal">
        
        <Button
            android:id="@+id/test_btn1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="1" />
        
        <Button
            android:id="@+id/test_btn2"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="2" />
        
        <Button
            android:id="@+id/test_btn3"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="3" />
        
        <Button
            android:id="@+id/test_btn4"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="4" />
        
        <Button
            android:id="@+id/test_btn5"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="5" />
        
        <Button
            android:id="@+id/test_btn6"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="6" />
        
        <Button
            android:id="@+id/test_btn7"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="7" />
        
        <Button
            android:id="@+id/test_btn8"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="8" />
        
        <Button
            android:id="@+id/test_btn9"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="9" />
        
        <Button
            android:id="@+id/test_btn10"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="10" />
    
    </LinearLayout>
    
    <TextView
        android:id="@+id/test_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/test_panel_linear"
        android:textSize="16sp" />
    
    
    <TextView
        android:id="@+id/test_txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/test_txt"
        android:textColor="#4b8a0b"
        android:textSize="16sp" />
    
    <TextView
        android:id="@+id/test_txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/test_txt1"
        android:text="
        demo4 >> if img1 hide, could brown one get and set?
        demo5 >> test anim, see if this brown one move correctly or not.
        demo6 >> img2 is under the window, let's see its animation right or wrong.
"
        android:textColor="#4b8a0b"
        android:textSize="13sp" />
    
    <!--■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■-->
    
    <TextView
        android:id="@+id/test_img"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="350dp"
        android:background="#5e5a23"
        android:gravity="center"
        android:text="img0"
        android:textColor="#ffffff"
        android:textSize="24sp" />
    
    <!--□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□-->
    
    <TextView
        android:id="@+id/test_img1"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="350dp"
        android:background="#511321"
        android:gravity="center"
        android:text="img1"
        android:textColor="#ffffff"
        android:textSize="24sp" />
    
    <!--□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□□-->
    
    <RelativeLayout
        android:id="@+id/test_img2"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:background="#555555">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:background="@color/text_divider_f2f2f2"
            android:gravity="center_horizontal"
            android:text="img2"
            android:textSize="24sp" />
    </RelativeLayout>


</RelativeLayout>
